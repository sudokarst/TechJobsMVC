<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>
    <h3>@ViewBag.searchType</h3>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key" 
                       checked="@(column.Key == ViewBag.searchType)"/>
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>

    <ol>
    @foreach (Dictionary<string, string> job in ViewBag.jobs)
    {
        <li><table class="job-listing">
            @foreach (KeyValuePair<string, string> kvp in job)
            {
                <tr>
                    <td>@kvp.Key</td>
                    <td>@kvp.Value</td>
                </tr>
            }
        </table></li>
    }
    </ol>
}